<div class="hero-wrap hero-bread" style="background-image: url('/public/images/bg_6.jpg');">
  <div class="container">
    <div class="row no-gutters slider-text align-items-center justify-content-center">
      <div class="col-md-9 ftco-animate text-center">
        <h1 class="mb-0 bread">Edit Products</h1>
      </div>
    </div>
  </div>
</div>
<section class="ftco-section contact-section bg-light">
        <div class="container">
          <div class="row block-9">
            <div class="col-md-6 order-md-last d-flex">
              <form action="/edit/{{this.productId}}" class="bg-white p-5 contact-form" method="post" enctype="multipart/form-data" autocomplete="off" >
               {{#each results}}
               <div class="form-group">Product Name: <input type="text" class="form-control" name="name1" value={{this.name}}></div>
              <div class="form-group">Price: <input type="text" class="form-control" name="price1" value={{this.price}}></div>
              <div class="form-group">Weight: <input type="number" class="form-control" name="weight1" value={{this.weight}}></div>
              <div class="form-group">Description: <textarea id="pershkrimi" class="form-control" name="description1" rows="5">{{this.description}}</textarea></div>
              <div class="form-group">Category: <select class="form-control" name="category1" value={{this.categoryId}}>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
              </select></div>
              <div class="form-group">Subcategory: <select class="form-control" name="subcategory1" value={{this.subcategoryId}}>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                </select></div>
                <div class="form-group">Color: <input type="text" class="form-control" name="color1" value={{this.color}}></div>
                <div class="form-group">Material: <input type="text" class="form-control" name="material1" value={{this.materials}}></div>
                <div class="form-group">Quantity: <input type="number" class="form-control" name="quantity1" value={{this.maxquantity}}></div>
                <div class="form-group">Sector: <input type="text" class="form-control" name="sector1" value={{this.sector}}></div>
                <div class="form-group">Photo: <input type="file" class="form-control" name="photo1" value={{this.photourl}}></div>
                {{/each}}
                <div class="form-group"><button type="submit" id="butoni" class="btn btn-primary py-3 px-5">Edit</button></div>
              </form>
            </div>
          </div>
        </div>
</section>